[advice]
	detachedHead = false
[alias]
	amend = commit --amend
	ci = commit -m
	co = checkout
	s = status -bsu
	st = status
	br = branch
	ch = cherry-pick
	lo = log --graph -10 --pretty=\"format:%C(auto)%h %s\"
	loneline = log --graph -10 --pretty=\"format:%C(auto)%h %s\"
	ldiff = diff HEAD~ HEAD
	diffs = diff --staged
	me = merge
	pullall = "!f(){ git pull \"$@\" && git submodule update --init --recursive; }; f"
	rb = rebase
[blame]
	date = short
[core]
	autocrlf = input
	eol = lf
	editor = vim
	pager = delta
[delta]
	features = line-numbers
	minus-style = "syntax 52"
	plus-style  = "syntax 16"
	minus-emph-style = "231 88 bold"
	plus-emph-style  = "231 22 bold"
	line-numbers-left-format = "{nm} "
	line-numbers-right-format = "{np} "
	syntax-theme = gruvbox-dark
	max-line-length = 2048
[diff]
	colorMoved = default
	algorithm = histogram
[difftool]
	prompt = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
	path = "~/.gitconfig.user" # contains user.name and user.email
[init]
	defaultBranch = trunk
[pull]
	rebase = false
	ff = only
[push]
	autoSetupRemote = true
