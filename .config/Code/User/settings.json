{
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorBlinking": "phase",
    "editor.cursorSurroundingLines": 3,
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Iosevka Helv Medium",
    "editor.fontSize": 17,
    "editor.hover.delay": 100,
    "editor.lineHeight": 20,
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "gutter",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [
        80,
        90
    ],
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.wordWrap": "on",
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.cu": "cpp"
    },
    "files.hotExit": "onExitAndWindowClose",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.enabled": false,
    "problems.decorations.enabled": false,
    "problems.showCurrentInStatus": true,
    "search.showLineNumbers": true,
    "search.smartCase": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "update.mode": "start",
    "window.closeWhenEmpty": true,
    "window.menuBarVisibility": "toggle",
    "window.restoreWindows": "all",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "window.titleBarStyle": "native",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Gruvbox Cool",
    "workbench.editor.showIcons": false,
    "workbench.editor.tabCloseButton": "off",
    "workbench.enableExperiments": false,
    "workbench.hover.delay": 100,
    "workbench.startupEditor": "newUntitledFile",
    "python.experiments.enabled": false,
    "python.languageServer": "Microsoft",
	"python.linting.pylintEnabled": true,
    "python.showStartPage": false,
    "todo.archive.project.enabled": false,
    "todo.archive.name": "done",
    "todo.embedded.provider": "rg",
    "todo.symbols.cancelled": "x",
    "todo.symbols.done": "+",
    "todo.symbols.box": "â–¡",
    "vim.handleKeys": {
		"<C-a>": false,
		"<C-c>": false,
		"<C-x>": false,
		"<C-T>": false,
		"<C-z>": false,
		"<C-Z>": false,
		"<C-b>": false,
		"<C-f>": false,
		"<C-k>": false,
		"<C-h>": false,
		"<C-n>": false,
		"<C-s>": false,
		"<C-S>": false,
		"<C-w>": false,
		"<C-[>": false,
		"<C-]>": false,
        "<C-o>": true,
        "<C-r>": true,
        "<C-v>": true
    },
    "vim.highlightedyank.duration": 140,
    "vim.highlightedyank.enable": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["h"]
        },
        {
            "before": ["k"],
            "after": ["g", "j"]
        },
        {
            "before": ["l"],
            "after": ["g", "k"]
        },
        {
            "before": [";"],
            "after": ["l"]
        },
        {
            "before": ["h"],
            "after": []
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["j"],
            "after": ["h"]
        },
        {
            "before": ["k"],
            "after": ["g", "j"]
        },
        {
            "before": ["l"],
            "after": ["g", "k"]
        },
        {
            "before": [";"],
            "after": ["l"]
        },
        {
            "before": ["h"],
            "after": []
        }
    ],
    "vim.sneak": true,
    "vim.timeout": 300,
    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "workbench.colorCustomizations": {
        "editorCursor.foreground": "#FF3E58",
        "editorCursor.background": "#000000"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "constant.other.caps",
                    "entity.name.function.decorator"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ],
    },
    "workbench.editorAssociations": [
        {
            "viewType": "jupyter.notebook.ipynb",
            "filenamePattern": "*.ipynb"
        }
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
        "python"
    ],
}
