" Escape insert mode by typing "jj" or "jk" quickly
imap jj <Esc>
imap jk <Esc>

" Allow single character insertions from normal mode
noremap <Space> i <Esc>r

" Clear the search highlight
nnoremap <silent> <return> :noh<return>

" Navigate with jkl; instead of hjkl
noremap ; l
noremap l k
noremap k j
noremap j h
noremap h <nop>

" Have x and c not modify registers
noremap x "_x
noremap c "_c

set backspace=indent,eol,start
set clipboard=unnamed
set ignorecase
set incsearch
set laststatus=2
set list
set nomodeline
set number
set shiftwidth=4
set smartcase
set so=3
set tabstop=4
set timeout
set timeoutlen=500
set visualbell
